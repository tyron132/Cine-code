{% extends "template.html.twig" %}

	{% block body %}
        <div class="body-content">
            <form method="POST" action="{{baseUrl}}/addfilm/confirmFilm">
                <div class="form-group">
                    <input type="text" name="titre" placeholder="Titre du film">
                </div>

                <div class="form-group">
                    <input type="texte" name="synopsis" placeholder="Description du film">
                </div>

                <div class="form-group">
                    <input type="date" name="date" >
                </div>


                <button type="submit" class="form-group">Ajouter le film</button>
            </form>
        </div>
    {% endblock %}
